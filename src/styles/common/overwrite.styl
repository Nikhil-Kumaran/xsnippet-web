@import './common/variables.styl'
@import './common/mixins.styl'

.snippet .ace_gutter-layer
  width: 40px !important

.snippet .ace_cursor
  display: none !important

.react-tags
  display: flex
  width: 47%
  input
    basic-input()
  .react-tags__container
    display: flex
    color: text-light
    li
      border: 1px solid rgba(text-light, .4)
      margin-right: 4px
      padding: 7px
      &:hover
        border-color: text-light
      a
        margin-left: 3px
        cursor: pointer
