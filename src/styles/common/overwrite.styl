@import './common/variables.styl'
@import './common/mixins.styl'

.snippet
  .ace_cursor
    display: none !important
  .ace_gutter
    &-layer
      width: 40px !important
    &-cell
      padding-right: 5px !important
      padding-left: 0
  .ace_scroller
    margin-left: 15px !important
  .ace_content
    width: calc(100% - 15px) !important

.new-snippet .ace_editor
  min-height 100% !important

.react-tags
  display: flex
  flex-flow: row wrap
  basic-input()
  width: 47%
  border-radius: 3px
  background-color: snippet-header-normal
  input
    basic-input()
    padding: 0
    border-radius: 3px
    background-color: snippet-header-normal
  .react-tags__container
    display: flex
    flex-flow: row wrap
    color: text-light
    li
      margin: 0 4px 5px 0
      padding: 0 8px
      font-size: 12px
      font-weight: 300
      line-height: 20px
      color: text-light
      border-radius: 9.5px
      background-color: rgba(snippet-header-light, .7)
      letter-spacing: 0.4px
      white-space: nowrap
      &:last-shild
        margin-right: 0
      &:hover
        border-color: text-light
      a
        margin-left: 3px
        cursor: pointer

.snippet-code .ace_text-input-ios
  position: relative !important
